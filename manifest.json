{
  "manifest_version": 2,
  "name": "Personal Scheduler",
  "description": "This extension acts as a personal scheduler for a user",
  "manifest_version": 2,
  "version": "1.0",
  "content_security_policy": "script-src 'self'; object-src 'self'; media-src http://www.waveevents.com/MyFilez/wavs/variety/bkwrdwok.wav ",

  "background":
    {
    "matches": ["<all_urls>", "http://ciaracoding.16mb.com/*"],
    "page" : "background.html",
    "persistent": true
    }
  ,

  "browser_action": {
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "http://ciaracoding.16mb.com/*",
    "<all_urls>"

  ],
  "icons": {
    "512": "schedulericon.png" }
}
